<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971ScheduleApp.Views.AppSettings">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="ClearPreferences" Text="Clear Preferences" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ClearPreferences_Clicked"/>
            <Button x:Name="LoadSampleData" Text="Load Sample Data" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center" Clicked="LoadSampleData_Clicked"/>
            <Button x:Name="ClearSampleData" Text="Clear Sample Data" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ClearSampleData_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>