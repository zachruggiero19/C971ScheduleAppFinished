<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971ScheduleApp.Views.ObjectiveAssessmentAdd">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="ObjAddSave" Text="Save" Clicked="ObjAddSave_Clicked"/>
        <ToolbarItem x:Name="ObjAddCancel" Text="Cancel" Clicked="ObjAddCancel_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>

        <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


                    <Label Text="Assessment ID"
                   Grid.Row="0"
                   FontSize="Medium"
                   VerticalTextAlignment="Center"/>
                    <Entry  x:Name="AssessmentId" Placeholder="Enter Assessment Name" Grid.Column="1" VerticalTextAlignment="Center" IsReadOnly="True"  Text="{Binding objAssessmententId}"/>
                    <Label Text="Assessment Name"
                   Grid.Row="1"
                   Grid.Column="0"
                   FontSize="Medium"
                   VerticalTextAlignment="Center"/>
                    <Entry x:Name="AssessmentName" Placeholder="Enter Assessment Name" Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Center" Text="{Binding objAssessmentName}"/>

                <Label  Text= "Pick Assessment" FontSize="Medium" VerticalTextAlignment="Center" Grid.Row="2"/>
                <Picker x:Name="AssessmentType" TitleColor="Black" Grid.Row="2" Grid.Column="1" VerticalOptions="Center">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Performance Assessment</x:String>
                            <x:String>Objective Assessment</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Label Text="Course Start"
                   Grid.Row="3"
                   Grid.Column="0"
                   FontSize="Medium"
                   VerticalTextAlignment="Center"/>
                    <DatePicker Format="yyyy-MM-dd"
                        Date="2023-01-01"
                        Grid.Row="3"
                        Grid.Column="1"
                        x:Name="StartDate"
                        />
                    <Label Text="Course End"
                   Grid.Row="4"
                   Grid.Column="0"
                   FontSize="Medium"
                   VerticalTextAlignment="Center"/>

                    <DatePicker Format="yyyy-MM-dd"
                        Date="2023-01-01"
                        Grid.Row="4"
                        Grid.Column="1"
                        x:Name="EndDate"/>
                    <Label Grid.Row="5" Text="Notification" VerticalTextAlignment="Center"/>
                    <Switch Grid.Row="5" Grid.Column="1" x:Name="Notification" HorizontalOptions="End" IsToggled="True"/>
                </Grid>
            </StackLayout>
        </ContentPage.Content>
</ContentPage>